{
  "rules": {
    "boards": {
      "$boardId": {
        ".read": "auth != null && root.child('boards').child($boardId).child('members').child(auth.uid).exists()",
        ".write": "auth != null && (!data.exists() && newData.child('members').child(auth.uid).exists() || data.child('members').child(auth.uid).exists())",
        "documents": {
          ".read": "auth != null && root.child('boards').child($boardId).child('members').child(auth.uid).exists()",
          "$objectId": {
            ".write": "auth != null && root.child('boards').child($boardId).child('members').child(auth.uid).exists() && (!root.child('boards').child($boardId).child('locks').child($objectId).exists() || root.child('boards').child($boardId).child('locks').child($objectId).child('userId').val() === auth.uid)"
          }
        },
        "locks": {
          ".read": "auth != null && root.child('boards').child($boardId).child('members').child(auth.uid).exists()",
          "$objectId": {
            ".write": "auth != null && root.child('boards').child($boardId).child('members').child(auth.uid).exists() && newData.child('userId').val() === auth.uid"
          }
        }
      }
    },
    "presence": {
      "$boardId": {
        ".read": "auth != null && root.child('boards').child($boardId).child('members').child(auth.uid).exists()",
        "$userId": {
          ".write": "auth != null && auth.uid === $userId && root.child('boards').child($boardId).child('members').child(auth.uid).exists()"
        }
      }
    },
    "user_boards": {
      "$userId": {
        ".read": "auth != null && auth.uid === $userId",
        ".write": "auth != null && auth.uid === $userId"
      }
    }
  }
}
